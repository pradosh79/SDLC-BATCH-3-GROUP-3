<%- include('../../partials/adminHeader', { title: "Lessons" }) %>

<div id="wrapper">
<%- include('../../partials/adminSidebar') %>

<div id="content-wrapper">
<div id="content">
<%- include('../../partials/adminNavbar', { user: admin }) %>

<div class="container mt-4">
<h3>Lessons â€“ <%= course.title %></h3>

<a href="/admin/courses/<%= course._id %>/lessons/create"
   class="btn btn-primary mb-3">Add Lesson</a>

<table class="table">
<tr>
<th>Title</th>
<th>Order</th>
<th>Actions</th>
</tr>

<% lessons.forEach(l => { %>
<tr>
<td><%= l.title %></td>
<td><%= l.order %></td>
<td>
<a href="/admin/lessons/edit/<%= l._id %>" class="btn btn-warning btn-sm">Edit</a>
<a href="/admin/quiz/<%= l._id %>" class="btn btn-info btn-sm">Quiz</a>
<a href="/admin/lessons/delete/<%= l._id %>"
   onclick="return confirm('Delete lesson?')"
   class="btn btn-danger btn-sm">Delete</a>
</td>
</tr>
<% }) %>

</table>
</div>
</div>
<%- include('../../partials/adminFooter') %>
</div>
</div>
