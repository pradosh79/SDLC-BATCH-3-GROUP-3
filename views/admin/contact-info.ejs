<%- include('../partials/adminHeader', { title: "Contact Info" }) %>

<div id="wrapper">
<%- include('../partials/adminSidebar') %>

<div id="content-wrapper" class="d-flex flex-column">
<div id="content">

<%- include('../partials/adminNavbar', { user: admin }) %>

<div class="container mt-4">

 <h2>Contact Information</h2>

  <form method="POST" action="/admin/contact-info" class="mt-3">
    <div class="mb-3">
      <label>Email</label>
      <input type="email" name="email" class="form-control" value="<%= info?.email || '' %>">
    </div>

    <div class="mb-3">
      <label>Phone</label>
      <input type="text" name="phone" class="form-control" value="<%= info?.phone || '' %>">
    </div>

    <div class="mb-3">
      <label>Address</label>
      <textarea name="address" class="form-control"><%= info?.address || '' %></textarea>
    </div>

    <div class="mb-3">
      <label>Google Map Embed URL</label>
      <textarea name="mapEmbedUrl" class="form-control" rows="4"><%= info?.mapEmbedUrl || '' %></textarea>
    </div>

    <button class="btn btn-primary">Save</button>
  </form>

  <% if(info?.mapEmbedUrl) { %>
    <div class="mt-4">
      <iframe src="<%= info.mapEmbedUrl %>" width="100%" height="300" style="border:0;" loading="lazy"></iframe>
    </div>
  <% } %>

</div>
</div>

<%- include('../partials/adminFooter') %>
</div>
</div>
