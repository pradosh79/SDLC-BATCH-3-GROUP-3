         class="collapse <%= courseMenuOpen ? 'show' : '' %>"
         data-bs-parent="#accordionSidebar">

      <div class="bg-white py-2 collapse-inner rounded">

        <h6 class="collapse-header">Courses</h6>
        <a class="collapse-item <%= currentUrl === '/admin/courses' ? 'active' : '' %>"
