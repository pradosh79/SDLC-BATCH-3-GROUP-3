<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Email OTP Demo</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <style>
    body {
      font-family: Arial, sans-serif;
      max-width: 400px;
      margin: 30px auto;
    }
    h2 {
      margin-top: 30px;
    }
    form {
      margin-bottom: 20px;
      padding: 15px;
      border: 1px solid #ddd;
      border-radius: 6px;
    }
    label {
      display: block;
      margin-bottom: 6px;
      font-weight: bold;
    }
    input[type="email"],
    button {
      width: 100%;
      padding: 8px;
      margin-bottom: 8px;
      box-sizing: border-box;
    }
    .otp-boxes {
      display: flex;
      gap: 6px;
      justify-content: center;
      margin-bottom: 8px;
    }
    .otp-boxes input {
      width: 40px;
      padding: 8px;
      text-align: center;
      font-size: 18px;
    }
    #message {
      margin-top: 10px;
      padding: 8px;
      border-radius: 4px;
      display: none;
    }
    #message.success {
      background: #e8f8e8;
      color: #2b7a2b;
      border: 1px solid #8fca8f;
    }
    #message.error {
      background: #fde8e8;
      color: #a94442;
      border: 1px solid #f5c2c2;
    }
  </style>
</head>
<body>
  <h2>Verify OTP</h2>
  <form id="verify-otp-form" action="/user/verifyEmail" method="post">

    <label>Enter 6-digit OTP</label>
    <h2> <%= message%></h2>
      <input
            type="text"
            class="form-control"
            name="otp"    
          />
      <br/>
      <input type="hidden" name="email" value="<%= email %>">
    

    <!-- Hidden input to hold combined otp value -->
    

    <button type="submit">Verify OTP</button>
  </form>

  <div id="message"></div>

<script>
const otpInputs = document.querySelectorAll(".otp-input");
const otpHidden = document.getElementById("otp-hidden");
const verifyForm = document.getElementById("verify-otp-form");

otpInputs.forEach((input, index) => {
  // Move cursor to next input
  input.addEventListener("input", () => {
    if (input.value.length === 1 && index < otpInputs.length - 1) {
      otpInputs[index + 1].focus();
    }
  });

  input.addEventListener("keydown", (e) => {
    if (e.key === "Backspace" && index > 0 && !input.value) {
      otpInputs[index - 1].focus();
    }
  });
});

// Before submit â†’ merge OTP values into hidden field
verifyForm.addEventListener("submit", () => {
  let otp = "";
  otpInputs.forEach(i => otp += i.value);
  otpHidden.value = otp;
});

  </script>
</body>
</html>
